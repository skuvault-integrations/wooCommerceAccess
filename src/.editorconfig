
[*.cs]
indent_style = tab
indent_size = tab
tab_width = 4

[*]

# Microsoft .NET properties
csharp_new_line_before_members_in_object_initializers = false
csharp_preserve_single_line_blocks = true
csharp_space_after_cast = false
csharp_space_between_method_call_parameter_list_parentheses = true
csharp_space_between_method_declaration_parameter_list_parentheses = true

# ReSharper properties
resharper_blank_lines_after_block_statements = 0
resharper_blank_lines_around_auto_property = 0
resharper_blank_lines_around_property = 0
resharper_csharp_blank_lines_inside_region = 0
resharper_csharp_indent_style = tab
resharper_csharp_insert_final_newline = true
resharper_csharp_keep_blank_lines_in_code = 100
resharper_csharp_max_line_length = 371
resharper_csharp_space_within_array_access_brackets = true
resharper_csharp_space_within_parentheses = true
resharper_csharp_wrap_ternary_expr_style = wrap_if_long
resharper_indent_preprocessor_if = do_not_change
resharper_indent_preprocessor_other = do_not_change
resharper_keep_existing_enum_arrangement = false
resharper_place_expr_accessor_on_single_line = true
resharper_place_expr_property_on_single_line = true
resharper_place_simple_embedded_statement_on_same_line = false
resharper_place_simple_initializer_on_single_line = false
resharper_remove_blank_lines_near_braces_in_code = false
resharper_space_before_foreach_parentheses = false
resharper_space_before_for_parentheses = false
resharper_space_before_using_parentheses = false
resharper_space_before_while_parentheses = false
resharper_space_within_attribute_brackets = true
resharper_space_within_catch_parentheses = true
resharper_space_within_foreach_parentheses = true
resharper_space_within_for_parentheses = true
resharper_space_within_if_parentheses = true
resharper_space_within_single_line_array_initializer_braces = true
resharper_space_within_type_argument_angles = true
resharper_space_within_type_parameter_angles = true
resharper_space_within_using_parentheses = true
resharper_space_within_while_parentheses = true
resharper_wrap_enum_declaration = wrap_if_long
resharper_wrap_object_and_collection_initializer_style = chop_always
